        <item name="actionBarTabStyle">@style/MyActionBarTabStyle</item>
        <item name="actionBarItemBackground">@drawable/action_item_background_selector</item>
        <item name="android:actionBarItemBackground">@drawable/action_item_background_selector</item>
     
        <!--<item name="android:actionOverflowButtonStyle">@style/MyOverflowButton</item>-->
    </style>

     <style name="Theme.ConstructThemeMenu" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/MyActionBarWithMenu</item>
    	<item name="android:actionBarStyle">@style/MyActionBarWithMenu</item>
        <!-- item name="android:actionBarItemBackground">@drawable/ad_selectable_background</item>-->
