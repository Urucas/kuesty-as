        <item name="android:actionBarItemBackground">@drawable/action_item_background_selector</item>
     
        <!--<item name="android:actionOverflowButtonStyle">@style/MyOverflowButton</item>-->
    </style>
    <!-- style for the tabs -->
    <style name="MyActionBarTabStyle" parent="Widget.Sherlock.Light.ActionBar.TabBar">
        <item name="android:background">#fc5a17</item>
        <item name="android:gravity">center</item>
   		<item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item> 
    </style>
    <style name="MyTabTextStyle" parent="Widget.Sherlock.Light.ActionBar.TabBar">
        <item name="android:textColor">#ffffff</item> 
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item> 
    </style>

    <style name="MyActionBar" parent="Widget.Sherlock.ActionBar">
	    <item name="background">#fc5a17</item>
	    <item name="android:background">#fc5a17</item>
	</style>

    <style name="MyActionBarWithMenu" parent="MyActionBar">
    	<item name="android:homeAsUpIndicator">@drawable/menu_lines</item>
    	<item name="homeAsUpIndicator">@drawable/menu_lines</item>
	</style>
    
